<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ImageView
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:layout_height="match_parent"
        android:src="@drawable/blue_winter"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        >


        <LinearLayout
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="@drawable/blur_box"
            android:orientation="vertical"
            android:padding="@dimen/activity_vertical_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/linearLayout">

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/vt_logo_wh"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:text="voyage tales"
                    android:textColor="#eee"
                    android:layout_gravity="center"
                    android:id="@+id/txt_title" />


                </LinearLayout>

            <TextView
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/margin_8dp"
                android:textColor="#eee"
                android:textSize="12sp"
                android:text="SIGN UP NOW. THIS WILL ONLY TAKE A MINUTE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <EditText
                android:layout_width="match_parent"
                android:background="#AAffffff"
                android:hint="EMAIL ID"
                android:padding="@dimen/margin_8dp"
                android:singleLine="true"
                android:layout_marginTop="@dimen/margin_8dp"
                android:textSize="14sp"
                android:layout_height="wrap_content"
                android:id="@+id/editText_reg_username" />

            <EditText
                android:layout_marginTop="@dimen/margin_8dp"
                android:padding="@dimen/margin_8dp"
                android:layout_width="match_parent"
                android:textSize="14sp"
                android:password="true"
                android:singleLine="true"
                android:hint="PASSWORD"
                android:background="#AAffffff"
                android:layout_height="wrap_content"
                android:id="@+id/editText_reg_password" />


            <Button
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:text="SIGN UP"
                android:background="#AF000000"
                android:padding="@dimen/margin_8dp"
                android:textSize="16sp"
                android:layout_marginBottom="@dimen/margin_8dp"
                android:textStyle="bold"
                android:textColor="#ccc"
                android:id="@+id/btn_reg_sign_in" />

        </LinearLayout>


    </RelativeLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_8dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:text="ALREADY REGISTERED? SIGN IN"
        android:background="#AF000000"
        android:textSize="14sp"
        android:textColor="#ccc"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/btn_reg_register" />
</RelativeLayout>
