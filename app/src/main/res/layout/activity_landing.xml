<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ImageView
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:layout_height="match_parent"
        android:src="@drawable/blue_winter"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        >


        <LinearLayout
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="@drawable/blur_box"
            android:orientation="vertical"
            android:padding="@dimen/activity_vertical_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/linearLayout">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_gravity="center"
                android:id="@+id/img_landing_logo" />

            <EditText
                android:layout_width="match_parent"
                android:background="#AAffffff"
                android:hint="username"
                android:padding="@dimen/margin_8dp"
                android:layout_marginTop="@dimen/margin_8dp"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:id="@+id/editText_landing_username" />

            <EditText
                android:layout_marginTop="@dimen/margin_8dp"
                android:padding="@dimen/margin_8dp"
                android:layout_width="match_parent"
                android:textSize="16sp"
                android:password="true"
                android:hint="password"
                android:background="#AAffffff"
                android:layout_height="wrap_content"
                android:id="@+id/editText_landing_password" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:textSize="16sp"
                    android:layout_gravity="right"
                    android:gravity="center_vertical|right"
                    android:textColor="#ccc"
                    android:text="forgot password?"
                    android:id="@+id/txt_landing_forgot_pwd" />
            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:text="sign in"
                android:background="#AF000000"
                android:padding="@dimen/margin_8dp"
                android:textSize="22sp"
                android:layout_marginBottom="@dimen/margin_8dp"
                android:textStyle="bold"
                android:textColor="#ccc"
                android:id="@+id/btn_landing_sign_in" />

        </LinearLayout>


    </RelativeLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_8dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:text="register new user"
        android:background="#AF000000"
        android:textSize="18sp"
        android:textColor="#ccc"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/btn_landing_register" />
</RelativeLayout>
