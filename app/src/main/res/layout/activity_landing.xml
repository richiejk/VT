<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ImageView
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:layout_height="match_parent"
        android:src="@drawable/blue_winter"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        >


        <LinearLayout
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="@drawable/blur_box"
            android:orientation="vertical"
            android:padding="@dimen/activity_vertical_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/linearLayout">

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/vt_logo_wh"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:text="voyage tales"
                    android:textColor="#eee"
                    android:layout_gravity="center"
                    android:id="@+id/txt_title" />


                </LinearLayout>


            <EditText
                android:layout_width="match_parent"
                android:background="#AAffffff"
                android:hint="EMAIL ID"
                android:padding="@dimen/margin_8dp"
                android:singleLine="true"
                android:layout_marginTop="@dimen/margin_8dp"
                android:textSize="14sp"
                android:layout_height="wrap_content"
                android:id="@+id/editText_landing_username" />

            <EditText
                android:layout_marginTop="@dimen/margin_8dp"
                android:padding="@dimen/margin_8dp"
                android:layout_width="match_parent"
                android:textSize="14sp"
                android:password="true"
                android:singleLine="true"
                android:hint="PASSWORD"
                android:background="#AAffffff"
                android:layout_height="wrap_content"
                android:id="@+id/editText_landing_password" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                    <CheckBox
                        android:textColor="#eee"
                        android:paddingLeft="8dp"
                        android:textSize="12sp"
                        android:button="@drawable/checkbox_remember_selector"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:text="REMEMBER ME"
                        android:id="@+id/checkBox_landing_remember_me" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:textSize="12sp"
                        android:layout_gravity="right"
                        android:gravity="center_vertical|right"
                        android:textColor="#ccc"
                        android:text="FORGOT PASSWORD? "
                        android:id="@+id/txt_landing_forgot_pwd" />
                </LinearLayout>

            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:onClick="login_now"
                android:layout_gravity="center_horizontal"
                android:text="SIGN IN"
                android:background="#AF000000"
                android:padding="@dimen/margin_8dp"
                android:textSize="16sp"
                android:layout_marginBottom="@dimen/margin_8dp"
                android:textStyle="bold"
                android:textColor="#ccc"
                android:id="@+id/btn_landing_sign_in" />
            <ImageView
                android:visibility="gone"
                android:id="@+id/temp_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </RelativeLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_8dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:text="REGISTER NEW USER"
        android:background="#AF000000"
        android:textSize="14sp"
        android:textColor="#ccc"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/btn_landing_register" />
</RelativeLayout>
