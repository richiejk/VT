<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.richiejk.voyagetales.TripDashboardActivity"
    tools:ignore="MergeRootFrame" >


    <RelativeLayout
        android:orientation="vertical"
        android:background="#cAffffff"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:id="@+id/ll_dashboard_while_in_trip"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="top"
            android:layout_gravity="top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="0dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:id="@+id/linearLayout2">
            <Button
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:text="LOCATION"
                android:background="#caffffff"
                android:padding="@dimen/margin_8dp"
                android:textSize="16sp"
                android:layout_marginBottom="@dimen/margin_8dp"
                android:textStyle="bold"
                android:textColor="@color/icon_gray"
                android:id="@+id/btn_profile_change_pwd" />

            <Button
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:text="TRAVEL"
                android:background="@color/text_lighter_gray"
                android:padding="@dimen/margin_8dp"
                android:textSize="16sp"
                android:layout_marginBottom="@dimen/margin_8dp"
                android:textStyle="bold"
                android:textColor="@color/icon_gray"
                android:id="@+id/btn_profile_change_pwd" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_dashboard_location"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/linearLayout2"
            android:layout_above="@+id/linearLayout3">

            <EditText
                android:hint="Location Name"
                android:background="@drawable/black_border_box"
                android:layout_margin="@dimen/margin_8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:hint="Location Description"
                android:background="@drawable/black_border_box"
                android:layout_margin="@dimen/margin_8dp"
                android:lines="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:layout_margin="@dimen/margin_8dp"
                android:padding="@dimen/margin_8dp"
                android:textColor="@color/text_lighter_gray"
                android:text="Save"
                android:layout_gravity="center_horizontal"
                android:background="#cf000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_dashboard_travel"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="100dp"
            android:layout_below="@+id/linearLayout2"
            android:layout_above="@+id/linearLayout3">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:paddingLeft="@dimen/margin_8dp"
                    android:layout_margin="@dimen/margin_8dp"
                    android:text="From"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:background="@drawable/black_border_box"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/margin_8dp"
                    android:padding="@dimen/margin_8dp"
                    android:text="From"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_margin="@dimen/margin_8dp"
                    android:text="to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:background="@drawable/black_border_box"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/margin_8dp"
                    android:padding="@dimen/margin_8dp"
                    android:text="To"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <EditText
                android:hint="Location Name (Optional)"
                android:background="@drawable/black_border_box"
                android:layout_margin="@dimen/margin_8dp"
                android:padding="@dimen/margin_8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:layout_margin="@dimen/margin_8dp"
                android:padding="@dimen/margin_8dp"
                android:textColor="@color/text_lighter_gray"
                android:text="Save"
                android:background="#cf000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:gravity="bottom|center_horizontal"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/linearLayout3">

            <ImageView
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/margin_8dp"
                android:id="@+id/img_dashboard_cam"
                android:layout_width="50dp"
                android:src="@drawable/cam_alt"
                android:layout_height="50dp"/>

            <ImageView
                android:id="@+id/img_dashboard_note"
                android:layout_marginLeft="@dimen/margin_8dp"
                android:layout_width="50dp"
                android:src="@drawable/note_alt"
                android:layout_gravity="bottom"
                android:layout_height="50dp"/>

            <ImageView
                android:id="@+id/img_dashboard_audio"
                android:layout_width="50dp"
                android:src="@drawable/mic_alt"
                android:layout_gravity="bottom"
                android:layout_height="50dp"/>
            <ImageView
                android:id="@+id/img_dashboard_stop_trip"
                android:layout_width="50dp"
                android:src="@drawable/coll_alt"
                android:layout_gravity="bottom"
                android:layout_height="50dp"/>
            <ImageView
                android:id="@+id/img_dashboard_stop_trip"
                android:layout_width="50dp"
                android:layout_marginRight="@dimen/margin_8dp"
                android:src="@drawable/power_alt"
                android:layout_gravity="bottom"
                android:layout_height="50dp"/>
        </LinearLayout>





    </RelativeLayout>
    </RelativeLayout>
