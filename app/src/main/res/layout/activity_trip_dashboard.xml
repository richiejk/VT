<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.richiejk.voyagetales.TripDashboardActivity"
    tools:ignore="MergeRootFrame" >

    <ImageView
        android:scaleType="centerCrop"
        android:src="@drawable/blue_winter"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:id="@+id/ll_dashboard_while_in_trip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    >

        <LinearLayout
            android:visibility="gone"
            android:layout_marginLeft="-10dp"
            android:layout_marginRight="-10dp"
            android:background="@drawable/blur_box_lighter"
            android:id="@+id/ll_dashboard_location_et"
            android:orientation="vertical"
            android:gravity="center_horizontal|bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/activity_horizontal_margin"
            android:layout_below="@+id/linearLayout2"
            android:layout_above="@+id/linearLayout3">

            <EditText
                android:id="@+id/editText_location_dashboard_location_name"
                android:padding="@dimen/margin_8dp"
                android:hint="Location Name"
                android:background="#AAffffff"
                android:layout_marginTop="@dimen/margin_8dp"
                android:layout_marginBottom="@dimen/margin_8dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/editText_location_dashboard_location_desc"
                android:padding="@dimen/margin_8dp"
                android:gravity="top|left"
                android:hint="Location Description"
                android:background="#AAffffff"
                android:layout_marginTop="@dimen/margin_8dp"
                android:layout_marginBottom="@dimen/margin_8dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:lines="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_dashboard_location_save"
                android:layout_margin="@dimen/margin_8dp"
                android:paddingTop="@dimen/margin_8dp"
                android:paddingBottom="@dimen/margin_8dp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:textColor="@color/text_lighter_gray"
                android:text="Save"
                android:minWidth="100dp"
                android:layout_gravity="center_horizontal"
                android:background="#cf000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="-10dp"
            android:layout_marginRight="-10dp"
            android:background="@drawable/blur_box_lighter"
            android:id="@+id/ll_dashboard_location_txt"
            android:orientation="vertical"
            android:gravity="center_horizontal|bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/activity_horizontal_margin"
            android:layout_below="@+id/linearLayout2"
            android:layout_above="@+id/linearLayout3">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:gravity="bottom"
                android:layout_gravity="bottom"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="@dimen/margin_8dp"
                    android:textSize="22sp"
                    android:text="Location Name"
                    android:id="@+id/txt_location_dashboard_location_name"
                    android:textColor="@color/text_light_gray"
                    android:layout_gravity="left"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/switch_type"
                    android:src="@drawable/arrow_alt"
                    android:layout_width="45dp"
                    android:layout_height="45dp" />

                </LinearLayout>


            <EditText
                android:textSize="16sp"
                android:textColor="@color/text_light_gray"
                android:padding="@dimen/margin_8dp"
                android:id="@+id/txt_location_dashboard_location_desc"
                android:gravity="top|left"
                android:maxLines="3"
                android:ellipsize="end"
                android:text="Location Description"
                android:layout_marginBottom="@dimen/margin_8dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:lines="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_dashboard_travel"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="100dp"
            android:layout_below="@+id/linearLayout2"
            android:layout_above="@+id/linearLayout3">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:paddingLeft="@dimen/margin_8dp"
                    android:layout_margin="@dimen/margin_8dp"
                    android:text="From"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:background="@drawable/black_border_box"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/margin_8dp"
                    android:padding="@dimen/margin_8dp"
                    android:text="From"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_margin="@dimen/margin_8dp"
                    android:text="to"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:background="@drawable/black_border_box"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/margin_8dp"
                    android:padding="@dimen/margin_8dp"
                    android:text="To"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <EditText
                android:hint="Location Name (Optional)"
                android:background="@drawable/black_border_box"
                android:layout_margin="@dimen/margin_8dp"
                android:padding="@dimen/margin_8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:layout_margin="@dimen/margin_8dp"
                android:padding="@dimen/margin_8dp"
                android:textColor="@color/text_lighter_gray"
                android:text="Save"
                android:background="#cf000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:background="#51000000"
            android:gravity="bottom|center_horizontal"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/margin_8dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/linearLayout3">

            <ImageView
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/margin_8dp"
                android:id="@+id/img_travel_dashboard_cam"
                android:layout_width="50dp"
                android:src="@drawable/cam_alt"
                android:layout_height="50dp"/>

            <ImageView
                android:id="@+id/img_travel_dashboard_note"
                android:layout_marginLeft="@dimen/margin_8dp"
                android:layout_width="50dp"
                android:src="@drawable/note_alt"
                android:layout_gravity="bottom"
                android:layout_height="50dp"/>

            <ImageView
                android:id="@+id/img_travel_dashboard_audio"
                android:layout_width="50dp"
                android:src="@drawable/mic_alt"
                android:layout_gravity="bottom"
                android:layout_height="50dp"/>
            <ImageView
                android:id="@+id/img_travel_dashboard_add_coll"
                android:layout_width="50dp"
                android:src="@drawable/coll_alt"
                android:layout_gravity="bottom"
                android:layout_height="50dp"/>

            <ImageView
                android:id="@+id/img_travel_dashboard_check_in"
                android:layout_width="50dp"
                android:src="@drawable/check_in_alt"
                android:layout_gravity="bottom"
                android:layout_height="50dp"/>

            <ImageView
                android:id="@+id/img_travel_dashboard_stop_trip"
                android:layout_width="50dp"
                android:layout_marginRight="@dimen/margin_8dp"
                android:src="@drawable/power_alt"
                android:layout_gravity="bottom"
                android:layout_height="50dp"/>
        </LinearLayout>





    </RelativeLayout>
    </RelativeLayout>
