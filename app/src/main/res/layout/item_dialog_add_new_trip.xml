<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#9Affffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="#CF000000"
        android:orientation="vertical"
        android:padding="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">

        <LinearLayout
            android:padding="@dimen/margin_8dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:text="Start a new trip"
                android:textColor="#eee"
                android:layout_gravity="center"
                android:id="@+id/txt_title" />


        </LinearLayout>


        <EditText
            android:layout_width="match_parent"
            android:background="#AAffffff"
            android:hint="TRIP NAME"
            android:padding="@dimen/margin_8dp"
            android:singleLine="true"
            android:layout_marginTop="@dimen/margin_8dp"
            android:textSize="14sp"
            android:layout_height="wrap_content"
            android:id="@+id/editText_dialog_start_trip_tripname" />

        <EditText
            android:gravity="left"
            android:layout_width="match_parent"
            android:background="#AAffffff"
            android:hint="TRIP DESCRIPTION"
            android:lines="3"
            android:maxLines="3"
            android:padding="@dimen/margin_8dp"
            android:layout_marginTop="@dimen/margin_8dp"
            android:textSize="14sp"
            android:layout_height="wrap_content"
            android:id="@+id/editText_dialog_start_trip_tripdesc" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:padding="@dimen/margin_8dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:layout_gravity="right|center_vertical"
                android:gravity="center_vertical|left"
                android:textColor="#ccc"
                android:text="Select trip picture"
                android:id="@+id/txt_dialog_start_trip_select_trip_pic_title" />
            <ImageView
                android:id="@+id/img_dialog_start_trip_cam"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:background="@drawable/cam_alt"
            android:layout_width="45dp"
            android:layout_height="45dp" />
            <TextView
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_weight="1"
                android:padding="@dimen/margin_8dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="12sp"
                android:layout_gravity="right|center_vertical"
                android:gravity="center_vertical|left"
                android:textColor="#ccc"
                android:visibility="gone"
                android:text="TRIP COVER PIC"
                android:id="@+id/txt_dialog_start_trip_trip_img_name" />

        </LinearLayout>



        <Button
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:onClick="login_now"
            android:layout_gravity="center_horizontal"
            android:text="START TRIP"
            android:background="#AF000000"
            android:padding="@dimen/margin_8dp"
            android:textSize="16sp"
            android:layout_marginBottom="@dimen/margin_8dp"
            android:textStyle="bold"
            android:textColor="#ccc"
            android:id="@+id/btn_dialog_start_trip_start" />
        <ImageView
            android:visibility="gone"
            android:id="@+id/temp_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>