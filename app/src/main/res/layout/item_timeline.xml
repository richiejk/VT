<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:paddingLeft="@dimen/margin_8dp"
    android:paddingRight="@dimen/margin_8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:background="@drawable/timeline_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/imageView" />
        <RelativeLayout

            android:layout_marginBottom="@dimen/margin_8dp"
            android:layout_marginTop="@dimen/margin_8dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="100dp" >
            <ImageView
                android:scaleType="centerCrop"
                android:src="@drawable/bbg"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <LinearLayout
                android:orientation="vertical"
                android:padding="@dimen/margin_8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_marginRight="@dimen/margin_8dp"
                    android:layout_marginLeft="@dimen/margin_8dp"
                    android:textStyle="bold"
                    android:id="@+id/txt_location_name_test_timeline"
                    android:text="Location Name"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="16sp"
                    android:textColor="@color/text_light_gray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/txt_location_desc_test_timeline"
                    android:layout_marginRight="@dimen/margin_8dp"
                    android:layout_marginLeft="@dimen/margin_8dp"
                    android:text="Desc"
                    android:lines="2"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textSize="12sp"
                    android:textColor="@color/text_light_gray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_location_name_test_timeline" />

                <TextView
                    android:id="@+id/txt_time_test_timeline"
                    android:layout_marginRight="@dimen/margin_8dp"
                    android:layout_marginLeft="@dimen/margin_8dp"
                    android:text="Desc"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="12sp"
                    android:textColor="@color/text_light_gray"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:layout_gravity="bottom"
                    android:layout_height="0dp"
                     />

            </LinearLayout>



            </RelativeLayout>
    </LinearLayout>
</LinearLayout>